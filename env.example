# Application settings
APP_ENV=production
APP_DEBUG=false
APP_URL=https://chista.yourdomain.com
APP_NAME=Chista
CHISTA_API_BASE=https://chista.yourdomain.com

DB_HOST=your-mysql-host.com
DB_PORT=3306
DB_NAME=chista_prod
DB_USER=chista_user
DB_PASSWORD=your-secure-password

# OpenRouter API settings
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=anthropic/claude-3-haiku
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Security settings
SESSION_SECRET=your_random_session_secret_here
JWT_SECRET=your_jwt_secret_key_here
API_RATE_LIMIT=100

LOG_LEVEL=error
ENABLE_QUERY_LOG=false 

# Whitelist of allowed domains (comma-separated, with ports if needed)
# Production example: app.client.com,dashboard.client.com  
URLS_WHITELIST=yourdomain.com,www.yourdomain.com,client1.domain.com