# Application settings
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost
APP_NAME=Chista

# Database settings
DB_HOST=mysql
DB_PORT=3306
DB_NAME=chista
DB_USER=chista_user
DB_PASSWORD=chista_password
DB_ROOT_PASSWORD=root_password

# OpenRouter API settings
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=anthropic/claude-3-haiku
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Security settings
SESSION_SECRET=your_random_session_secret_here
JWT_SECRET=your_jwt_secret_key_here
API_RATE_LIMIT=100

# Chat settings
DEFAULT_AI_PROMPT="You are a helpful customer support agent. Be polite, concise, and helpful."
MAX_MESSAGE_LENGTH=2000
CHAT_TIMEOUT_MINUTES=30

# Operator settings
OPERATOR_SESSION_TIMEOUT=3600
MAX_CONCURRENT_CHATS=10

# File upload settings (for future use)
MAX_FILE_SIZE=5MB
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# Email settings (for future notifications)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_email_password
MAIL_FROM_ADDRESS=noreply@chista.ai
MAIL_FROM_NAME=Chista Support

# Development settings
LOG_LEVEL=debug
ENABLE_QUERY_LOG=true 