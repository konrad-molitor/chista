{
    "name": "chista/chista",
    "description": "AI-powered customer support chat system",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Chista Team",
            "email": "team@chista.ai"
        }
    ],
    "require": {
        "php": ">=8.1",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-curl": "*",
        "vlucas/phpdotenv": "^5.5",
        "ramsey/uuid": "^4.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "Chista\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Chista\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs-check": "phpcs --standard=PSR12 src/",
        "cs-fix": "phpcbf --standard=PSR12 src/"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
} 